<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AjustesFragment"
    android:background="@color/colorPrimario">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clAjustes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorFondo">

        <LinearLayout
            android:id="@+id/llAjustes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/tvAjust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp40"
            android:text="@string/ajustes"
            android:textColor="@color/colorPrimarioOscuro"
            android:textSize="@dimen/sp32"
            app:layout_constraintTop_toTopOf="@id/clAjustes"
            android:layout_weight="1"
            />

            <ImageView
                android:id="@+id/imgAjustes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"/>

        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/llAjustes"
            android:layout_marginTop="@dimen/dp104"
            android:text="@string/btn_about"
            android:textColor="@color/colorPrimarioOscuro"
            style="@style/HidraButtonAjustes">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btnAbout"
            android:layout_marginTop="@dimen/dp40"
            android:layout_marginStart="@dimen/dp40"
            android:layout_marginEnd="@dimen/dp40"
            android:text="@string/btn_help"
            style="@style/HidraButton">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btnHelp"
            android:layout_marginTop="@dimen/dp40"
            android:layout_marginStart="@dimen/dp40"
            android:layout_marginEnd="@dimen/dp40"
            android:text="@string/btn_logout"
            style="@style/HidraButton">

        </com.google.android.material.button.MaterialButton>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>