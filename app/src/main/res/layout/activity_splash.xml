<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimarioOscuro"
    tools:context=".Splash">


    <ImageView
        android:id="@+id/imgApp"
        android:layout_width="@dimen/dp240"
        android:layout_height="@dimen/dp240"
        android:layout_marginTop="@dimen/dp24"
        android:contentDescription="@string/foto_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="@dimen/dp160"/>


    <TextView
        android:id="@+id/tvApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp32"
        android:fontFamily="@font/catamaran_black"
        android:gravity="center"
        android:text="HIDRA"
        android:textColor="@color/colorPrimario"
        android:textSize="@dimen/sp40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgApp" />

</androidx.constraintlayout.widget.ConstraintLayout>