<resources>
<!-- Base application theme. -->
<style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimario</item>
    <item name="colorPrimaryDark">@color/colorPrimario</item>
    <item name="colorAccent">@color/colorAcento</item>
</style>

    <style name="splashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimario</item>
        <item name="colorPrimaryDark">@color/colorBarraSplash</item>
        <item name="colorAccent">@color/colorAcento</item>
    </style>


    <style name="TextOutlined" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:textColor">@color/colorPrimarioOscuro</item>
        <item name="cornerRadius">30dp</item>
        <item name="strokeColor">@color/colorAcento</item>
    </style>

    <style name="HidraButton"
        parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/statelist</item>
        <item name="cornerRadius">3dp</item>
    </style>


    <style name="boton_reg" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
        <item name="backgroundTint">@color/statelist_btn_reg</item>
    </style>

    <style name="MyShapeAppearance" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSize">3dp</item>

    </style>


</resources>